
@{
    ViewData["Title"] = "View";
}
@model List<Product>;
<div class="container">
<div class="row py-3">
    <div class="col-6">
        Products
    </div>
    <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i></a>
    </div>
</div>
    <table class="table table-dark table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Type</th>
                <th>Comment</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.OrderBy(u=>u.ProductId))
            {    
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Type</td>
                    <td>@item.Comments</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ProductId" asp->Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId" asp->Delete</a>
                    </td>
                </tr>        
            }
        </tbody>
    </table>
</div>

