@model IEnumerable<Sir_Faizan_Method.Models.SirFaizanMethodTable>

@{
    ViewData["Title"] = "Read";
}

<h1 class="text-center py-5">Crud App</h1>
<div class=" container">
    <table class="table text-center  table-dark table-bordered table-responsive table-striped">
        <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-lg"></i></a>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th class="text-center">Modify</th>
            <th class="text-center">Details</th>
            <th class="text-center">Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a></td>
            <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-lg"></i></a></td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a></td>
        </tr>
}
    </tbody>
</table>
</div>